{
  "version": "0.2.0",
  "configurations": [
    {
      // Use IntelliSense to find out which attributes exist for C# debugging
      // Use hover for the description of the existing attributes
      // For further information visit https://github.com/dotnet/vscode-csharp/blob/main/debugger-launchjson.md
      "name": ".NET 8.0 Launch HoloPatcher",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-gui",
      // If you have changed target frameworks, make sure to update the program path.
      "program": "${workspaceFolder}/src/HoloPatcher/bin/Debug/net8.0.0/HoloPatcher.dll",
      "cwd": "${workspaceFolder}/src/HoloPatcher",
      // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
      "console": "integratedTerminal",
      "env": {
        "AVALONIA_LOGGING_LEVEL": "Verbose",
        "Logging__LogLevel__Default": "Debug",
        "Logging__LogLevel__Microsoft": "Information",
        "Logging__LogLevel__Avalonia": "Verbose"
      }
    },
    {
      "name": ".NET 8.0 Launch KNCSDecomp",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-kncsdecomp",
      // If you have changed target frameworks, make sure to update the program path.
      "program": "${workspaceFolder}/src/KNCSDecomp/bin/Debug/net8.0.0/KNCSDecomp.dll",
      "cwd": "${workspaceFolder}/src/KNCSDecomp",
      // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
      "console": "integratedTerminal",
      "env": {
        "AVALONIA_LOGGING_LEVEL": "Verbose",
        "Logging__LogLevel__Default": "Debug",
        "Logging__LogLevel__Microsoft": "Information",
        "Logging__LogLevel__Avalonia": "Verbose"
      }
    },
    {
      "name": ".NET 8.0 Run Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-tests",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/src/TSLPatcher.Tests/TSLPatcher.Tests.csproj"
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false,
      "justMyCode": false
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    },
    {
      "name": "Launch Andastra Game Launcher (Debug) - Watch Mode",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/Andastra/Andastra.csproj",
        "--configuration",
        "Debug"
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "justMyCode": false,
      "enableStepFiltering": false,
      "symbolOptions": {
        "searchPaths": [
          "${workspaceFolder}/src/Andastra/bin/Debug/net8.0"
        ],
        "searchMicrosoftSymbolServer": true,
        "searchNuGetOrgSymbolServer": true
      },
      "env": {
        "DOTNET_ENVIRONMENT": "Development",
        "DOTNET_LOGGING_DEBUG": "Microsoft.Extensions.Hosting,Microsoft.AspNetCore.Hosting,Microsoft.AspNetCore.Server.Kestrel",
        "Logging__LogLevel__Default": "Trace",
        "Logging__LogLevel__Microsoft": "Trace",
        "Logging__LogLevel__Microsoft.Hosting.Lifetime": "Trace",
        "Logging__LogLevel__System": "Trace"
      }
    },
    {
      "name": "Launch Andastra Game Launcher (Release) - Watch Mode",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "watch",
        "run",
        " --project",
        "${workspaceFolder}/src/Andastra/Andastra.csproj",
        "--configuration",
        "Release"
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "justMyCode": false,
      "enableStepFiltering": false,
      "symbolOptions": {
        "searchPaths": [
          "${workspaceFolder}/src/Andastra/bin/Release/net8.0"
        ],
        "searchMicrosoftSymbolServer": true,
        "searchNuGetOrgSymbolServer": true
      },
      "env": {
        "DOTNET_ENVIRONMENT": "Production",
        "DOTNET_LOGGING_DEBUG": "Microsoft.Extensions.Hosting,Microsoft.AspNetCore.Hosting,Microsoft.AspNetCore.Server.Kestrel",
        "Logging__LogLevel__Default": "Trace",
        "Logging__LogLevel__Microsoft": "Trace",
        "Logging__LogLevel__Microsoft.Hosting.Lifetime": "Trace",
        "Logging__LogLevel__System": "Trace"
      }
    },
    {
      "name": "Attach to Odyssey Game",
      "type": "coreclr",
      "request": "attach",
      "processName": "Odyssey.Game.exe"
    },
    {
      "name": "Attach to Stride Process",
      "type": "coreclr",
      "request": "attach",
      "processName": ""
    }
  ]
}
