    <LangVersion>7.3</LangVersion>
    <Nullable>disable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <RootNamespace>Andastra.Runtime.Graphics</RootNamespace>
    <AssemblyName>Andastra.Runtime.Graphics</AssemblyName>
    <Description>Graphics abstraction layer for Odyssey Engine - unified interfaces for MonoGame and Stride backends</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2025.2.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Core\Andastra.Runtime.Core.csproj" />
    <ProjectReference Include="..\Content\Andastra.Runtime.Content.csproj" />
    <ProjectReference Include="..\..\Andastra.Formats\Andastra.Formats.csproj" />
    <ProjectReference Include="Andastra.Runtime.Graphics.Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="MonoGame\**" />
    <Compile Remove="Stride\**" />
    <None Remove="MonoGame\**" />
    <None Remove="Stride\**" />
  </ItemGroup>

</Project>
