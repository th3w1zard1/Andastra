<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>7.3</LangVersion>
    <Nullable>disable</Nullable>
    <OutputType>Library</OutputType>
    <ImplicitUsings>disable</ImplicitUsings>
    <RootNamespace>Odyssey.Stride</RootNamespace>
    <AssemblyName>Odyssey.Stride</AssemblyName>
    <Description>Stride Game Engine adapters for Odyssey Engine - OpenGL rendering with PBR materials and dynamic lighting. Other backends (Vulkan, DX12) will be added later.</Description>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <!-- Use OpenGL exclusively for maximum compatibility -->
    <StrideGraphicsApi>OpenGL</StrideGraphicsApi>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Odyssey.Core\Odyssey.Core.csproj" />
    <ProjectReference Include="..\Odyssey.Content\Odyssey.Content.csproj" />
    <ProjectReference Include="..\Odyssey.Kotor\Odyssey.Kotor.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2025.2.4" />
    <!-- Stride Engine packages -->
    <PackageReference Include="Stride.Engine" Version="4.2.0.2122" />
    <PackageReference Include="Stride.Audio" Version="4.2.0.2122" />
    <PackageReference Include="Stride.Physics" Version="4.2.0.2122" />
    <PackageReference Include="Stride.UI" Version="4.2.0.2122" />
    <PackageReference Include="Stride.Rendering" Version="4.2.0.2122" />
    <PackageReference Include="Stride.Graphics" Version="4.2.0.2122" />
    <PackageReference Include="Stride.Shaders" Version="4.2.0.2122" />
    <!-- NOTE: Vulkan and DirectX packages removed - we use OpenGL exclusively for now.
         These will be re-added when implementing multi-backend support later:
         - Silk.NET.Vulkan
         - Silk.NET.Vulkan.Extensions.KHR
         - Vortice.D3DCompiler
         - Vortice.Direct3D12
         - Vortice.DXGI
    -->
  </ItemGroup>

</Project>
