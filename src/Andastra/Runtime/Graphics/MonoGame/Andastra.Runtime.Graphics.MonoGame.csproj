<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net9.0</TargetFrameworks>
    <LangVersion>7.3</LangVersion>
    <Nullable>disable</Nullable>
    <OutputType>Library</OutputType>
    <ImplicitUsings>disable</ImplicitUsings>
    <RootNamespace>Andastra.Runtime.Graphics.MonoGame</RootNamespace>
    <AssemblyName>Andastra.Runtime.Graphics.MonoGame</AssemblyName>
    <Description>MonoGame adapters for Odyssey Engine - cross-platform rendering with support for textures, models, and UI.</Description>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\Andastra.Runtime.Core.csproj" />
    <ProjectReference Include="..\..\Content\Andastra.Runtime.Content.csproj" />
    <ProjectReference Include="..\Andastra.Runtime.Graphics.csproj" />
    <ProjectReference Include="..\Common\Andastra.Runtime.Graphics.Common.csproj" />
    <ProjectReference Include="..\..\Games\Common\Andastra.Runtime.Games.Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2025.2.4" />
    <!-- MonoGame Framework packages -->
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.4.1" />
    <!-- Myra UI library for functional text-based menus -->
    <PackageReference Include="Myra" Version="1.5.10" />
  </ItemGroup>

</Project>
