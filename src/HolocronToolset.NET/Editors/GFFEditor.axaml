<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="HolocronToolset.NET.Editors.GFFEditor"
        Title="GFF Editor"
        Width="668" Height="486">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Name="actionNew" />
                <MenuItem Header="_Open" Name="actionOpen" />
                <MenuItem Header="_Save" Name="actionSave" />
                <MenuItem Header="Save _As" Name="actionSave_As" />
                <Separator />
                <MenuItem Header="_Revert" Name="actionRevert" />
                <Separator />
                <MenuItem Header="E_xit" Name="actionExit" />
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="Set TLK" Name="actionSetTLK" />
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid ColumnDefinitions="2*,*">
            <!-- Tree View (left) -->
            <TreeView Name="treeView" Grid.Column="0" FontFamily="Courier New" />

            <!-- Right Panel -->
            <Grid Grid.Column="1" RowDefinitions="Auto,*" Margin="5,0,0,0">
                <!-- Field Box -->
                <Border Name="fieldBox" Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,10" IsEnabled="False">
                    <Grid RowDefinitions="Auto,Auto">
                        <Grid Grid.Row="0" ColumnDefinitions="Auto,*" Margin="0,0,0,5">
                            <TextBlock Text="Label:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" />
                            <TextBox Name="labelEdit" Grid.Column="1" MaxLength="16" />
                        </Grid>
                        <Grid Grid.Row="1" ColumnDefinitions="Auto,*">
                            <TextBlock Text="Type:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" />
                            <ComboBox Name="typeCombo" Grid.Column="1">
                                <ComboBoxItem Content="UInt8" />
                                <ComboBoxItem Content="Int8" />
                                <ComboBoxItem Content="UInt16" />
                                <ComboBoxItem Content="Int16" />
                                <ComboBoxItem Content="UInt32" />
                                <ComboBoxItem Content="Int32" />
                                <ComboBoxItem Content="UInt64" />
                                <ComboBoxItem Content="Int64" />
                                <ComboBoxItem Content="Single" />
                                <ComboBoxItem Content="Double" />
                                <ComboBoxItem Content="String" />
                                <ComboBoxItem Content="ResRef" />
                                <ComboBoxItem Content="LocalizedString" />
                                <ComboBoxItem Content="Binary" />
                                <ComboBoxItem Content="Struct" />
                                <ComboBoxItem Content="List" />
                                <ComboBoxItem Content="Vector4" />
                                <ComboBoxItem Content="Vector3" />
                            </ComboBox>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Pages Stack -->
                <ContentControl Name="pages" Grid.Row="1">
                    <!-- Pages will be set programmatically based on field type -->
                </ContentControl>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
