<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="HolocronToolset.NET.Editors.TPCEditor"
        Title="TPC Texture Editor"
        Width="1000" Height="700">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Name="actionNew" />
                <MenuItem Header="_Open" Name="actionOpen" />
                <MenuItem Header="_Save" Name="actionSave" />
                <MenuItem Header="Save _As" Name="actionSaveAs" />
                <Separator />
                <MenuItem Header="_Revert" Name="actionRevert" />
                <Separator />
                <MenuItem Header="E_xit" Name="actionExit" />
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Copy" Name="actionCopy" />
                <MenuItem Header="_Paste" Name="actionPaste" />
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Decompile" Name="actionDecompile" />
                <MenuItem Header="Extract _TXI" Name="actionExtractTXI" />
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid RowDefinitions="*,Auto">
            <!-- Texture Scroll Area -->
            <ScrollViewer Name="textureScrollArea" Grid.Row="0">
                <Grid>
                    <Image Name="textureLabel" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Grid>
            </ScrollViewer>

            <!-- Controls Widget -->
            <Grid Name="controlsWidget" Grid.Row="1" RowDefinitions="Auto" MaxHeight="60" Margin="5">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Zoom:" VerticalAlignment="Center" Margin="0,0,5,0" />
                    <Button Name="zoomOutButton" Content="âˆ’" Width="30" />
                    <Slider Name="zoomSlider" Minimum="10" Maximum="500" Value="100" Width="200" Margin="5,0" />
                    <Button Name="zoomInButton" Content="+" Width="30" />
                </StackPanel>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
