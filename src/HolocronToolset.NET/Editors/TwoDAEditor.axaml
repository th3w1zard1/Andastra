<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="HolocronToolset.NET.Editors.TwoDAEditor"
        Title="2DA Editor"
        Width="635" Height="454">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Name="actionNew" />
                <MenuItem Header="_Open" Name="actionOpen" />
                <MenuItem Header="_Save" Name="actionSave" />
                <MenuItem Header="Save _As" Name="actionSaveAs" />
                <MenuItem Header="_Revert" Name="actionRevert" />
                <Separator />
                <MenuItem Header="E_xit" Name="actionExit" />
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Copy" Name="actionCopy" />
                <MenuItem Header="_Paste" Name="actionPaste" />
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="Toggle _Filter" Name="actionToggleFilter" />
                <Separator />
                <MenuItem Header="_Insert Row" Name="actionInsertRow" />
                <MenuItem Header="_Duplicate Row" Name="actionDuplicateRow" />
                <MenuItem Header="_Remove Rows" Name="actionRemoveRows" />
                <Separator />
                <MenuItem Header="_Redo Row Labels" Name="actionRedoRowLabels" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Set Row _Header">
                    <MenuItem Header="placeholder" Name="actionplaceholder" />
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid RowDefinitions="Auto,*">
            <!-- Filter Box -->
            <Expander Header="Filter" Name="filterBox" Grid.Row="0" IsExpanded="False">
                <TextBox Name="filterEdit" Margin="5" />
            </Expander>

            <!-- 2DA Table -->
            <DataGrid Name="twodaTable" Grid.Row="1" 
                      AutoGenerateColumns="False"
                      CanUserReorderColumns="True"
                      CanUserResizeColumns="True"
                      SelectionMode="Extended" />
        </Grid>
    </DockPanel>
</Window>
