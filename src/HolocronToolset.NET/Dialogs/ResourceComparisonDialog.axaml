<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="HolocronToolset.NET.Dialogs.ResourceComparisonDialog"
        Title="Compare Resources"
        Width="1200" Height="700"
        WindowStartupLocation="CenterOwner">
    <Grid RowDefinitions="Auto,*,Auto" Margin="10">
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*,*" Margin="0,0,0,10">
            <StackPanel Grid.Column="0">
                <TextBlock Text="Left:" FontWeight="Bold" />
                <TextBlock Name="leftPathLabel" TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock Text="Right:" FontWeight="Bold" />
                <TextBlock Name="rightPathLabel" TextWrapping="Wrap" />
            </StackPanel>
        </Grid>

        <!-- Comparison View -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*" Margin="0,0,0,10">
            <ScrollViewer Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <TextBox Name="leftText" IsReadOnly="True" AcceptsReturn="True" AcceptsTab="False"
                         TextWrapping="NoWrap" FontFamily="Consolas" />
            </ScrollViewer>
            <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <TextBox Name="rightText" IsReadOnly="True" AcceptsReturn="True" AcceptsTab="False"
                         TextWrapping="NoWrap" FontFamily="Consolas" />
            </ScrollViewer>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="closeButton" Content="Close" Width="75" />
        </StackPanel>
    </Grid>
</Window>
