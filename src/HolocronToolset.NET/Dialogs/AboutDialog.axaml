<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="HolocronToolset.NET.Dialogs.AboutDialog"
        Title="About"
        Width="430" Height="207"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <Grid ColumnDefinitions="Auto,*" Margin="20">
        <!-- Icon/Image -->
        <Image Name="image" Grid.Column="0" Width="128" Height="128" Margin="0,0,20,0" />
        
        <!-- Text Content -->
        <Grid Grid.Column="1" RowDefinitions="*,Auto">
            <TextBlock Name="aboutLabel" Grid.Row="0" TextWrapping="Wrap">
                <Run Text="Holocron Toolset" FontSize="10" FontWeight="Bold" />
                <LineBreak />
                <Run Text="Version X.X.X" />
                <LineBreak />
                <Run Text="Copyright (c) 2022 Nicholas Hugi" />
                <LineBreak />
                <LineBreak />
                <Run Text="Holocron Image Source" Foreground="Blue" TextDecorations="Underline" />
                <LineBreak />
                <Run Text="Deadlystream Page" Foreground="Blue" TextDecorations="Underline" />
                <LineBreak />
                <Run Text="Github" Foreground="Blue" TextDecorations="Underline" />
            </TextBlock>
            
            <!-- Close Button -->
            <Button Name="closeButton" Grid.Row="1" Content="Close" HorizontalAlignment="Right" Width="75" Margin="0,10,0,0" />
        </Grid>
    </Grid>
</Window>
