<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="HolocronToolset.NET.Dialogs.InsertInstanceDialog"
        Title="Insert Instance"
        Width="800" Height="600"
        WindowStartupLocation="CenterOwner">
    <Grid ColumnDefinitions="*,2*" Margin="10">
        <!-- Left Panel -->
        <Grid Grid.Column="0" RowDefinitions="Auto,*,Auto" Margin="0,0,10,0">
            <!-- Preview Group -->
            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Text="Preview" FontWeight="Bold" Margin="5" />
                    <Border Grid.Row="1" MinWidth="250" MinHeight="250" Background="LightGray" Margin="5">
                        <!-- Preview renderer will be added here when available -->
                        <TextBlock Text="Preview" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </Grid>
            </Border>

            <!-- Information Group -->
            <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Text="Information" FontWeight="Bold" Margin="5" />
                    <StackPanel Grid.Row="1" Spacing="5" Margin="5">
                        <TextBlock Name="dynamicTextLabel" Text="Dynamic Text" TextWrapping="Wrap" />
                        <TextBlock Name="staticTextLabel" Text="Selected Resource" TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Right Panel -->
        <Grid Grid.Column="1" RowDefinitions="Auto,Auto,*,Auto">
            <!-- Settings Group -->
            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Text="Settings" FontWeight="Bold" Margin="5" />
                    <Grid Grid.Row="1" ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" Margin="5">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ResRef:" VerticalAlignment="Center" Margin="0,0,5,5" />
                        <TextBox Grid.Row="0" Grid.Column="1" Name="resrefEdit" MaxLength="16" IsEnabled="False" Margin="0,0,0,5" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Location:" VerticalAlignment="Center" Margin="0,0,5,0" />
                        <ComboBox Grid.Row="1" Grid.Column="1" Name="locationSelect" />
                    </Grid>
                </Grid>
            </Border>

            <!-- Resource Type Group -->
            <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Text="Resource Type" FontWeight="Bold" Margin="5" />
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10" Margin="5">
                        <RadioButton Name="reuseResourceRadio" Content="Reuse Resource" IsChecked="True" />
                        <RadioButton Name="copyResourceRadio" Content="Copy Resource" />
                        <RadioButton Name="createResourceRadio" Content="Create Resource" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Resource List Group -->
            <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Text="Resource List" FontWeight="Bold" Margin="5" />
                    <Grid Grid.Row="1" RowDefinitions="Auto,*" Margin="5">
                        <TextBox Grid.Row="0" Name="resourceFilter" Watermark="Search resources..." Margin="0,0,0,5" />
                        <ListBox Grid.Row="1" Name="resourceList" />
                    </Grid>
                </Grid>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="5">
                <Button Name="okButton" Content="OK" Width="75" />
                <Button Name="cancelButton" Content="Cancel" Width="75" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
