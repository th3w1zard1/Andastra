<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>7.3</LangVersion>
    <Nullable>disable</Nullable>
    <OutputType>Library</OutputType>
    <ImplicitUsings>disable</ImplicitUsings>
    <RootNamespace>BioWareEngines.MonoGame</RootNamespace>
    <AssemblyName>BioWareEngines.MonoGame</AssemblyName>
    <Description>MonoGame adapters for Odyssey Engine - cross-platform rendering with support for textures, models, and UI.</Description>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\BioWareEngines.Core\BioWareEngines.Core.csproj" />
    <ProjectReference Include="..\BioWareEngines.Content\BioWareEngines.Content.csproj" />
    <ProjectReference Include="..\BioWareEngines.Kotor\BioWareEngines.Kotor.csproj" />
    <ProjectReference Include="..\BioWareEngines.Graphics\BioWareEngines.Graphics.csproj" />
    <ProjectReference Include="..\BioWareEngines.Graphics.Common\BioWareEngines.Graphics.Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2025.2.4" />
    <!-- MonoGame Framework packages -->
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.1.303" />
    <!-- Myra UI library for functional text-based menus -->
    <PackageReference Include="Myra" Version="1.5.7" />
  </ItemGroup>

</Project>
