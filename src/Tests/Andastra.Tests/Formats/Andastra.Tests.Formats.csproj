<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <LangVersion>7.3</LangVersion>
    <Nullable>disable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateGlobalUsings>false</GenerateGlobalUsings>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <!-- Debug Configuration -->
  <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
    <TargetFrameworks Condition="'$(OS)' == 'Windows_NT'">net9.0</TargetFrameworks>
    <OutputType>Library</OutputType>
    <EnableNETAnalyzers>false</EnableNETAnalyzers>
    <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
    <Nullable>disable</Nullable>
    <Optimize>false</Optimize>
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
    <RunCodeAnalysis>false</RunCodeAnalysis>
    <EnableNETAnalyzers>false</EnableNETAnalyzers>
    <EnforceCodeStyleInBuild>false</EnforceCodeStyleInBuild>
    <BuildInParallel>true</BuildInParallel>
    <UseSharedCompilation>true</UseSharedCompilation>
    <UseRidGraph>true</UseRidGraph>
    <Deterministic>false</Deterministic>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
  </PropertyGroup>

  <!-- Release Configuration -->
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <TargetFrameworks></TargetFrameworks>
    <TargetFrameworks Condition="$([MSBuild]::VersionGreaterThanOrEquals('$(NETCoreSdkVersion)', '10.0.0'))">
      $(TargetFrameworks);net10.0
    </TargetFrameworks>
    <TargetFrameworks Condition="$([MSBuild]::VersionGreaterThanOrEquals('$(NETCoreSdkVersion)', '9.0.0'))">
      $(TargetFrameworks);net9.0
    </TargetFrameworks>
    <TargetFrameworks Condition="$([MSBuild]::VersionGreaterThanOrEquals('$(NETCoreSdkVersion)', '8.0.0'))">
      $(TargetFrameworks);net9.0
    </TargetFrameworks>
    <TargetFrameworks Condition="$([System.String]::new('$(NETCoreSdkVersion)').StartsWith('7.'))">
      $(TargetFrameworks);net7.0;net6.0
    </TargetFrameworks>
    <TargetFrameworks Condition="$([System.String]::new('$(NETCoreSdkVersion)').StartsWith('6.'))">
      $(TargetFrameworks);net6.0
    </TargetFrameworks>
    <TargetFrameworks Condition="'$(OS)' == 'Windows_NT' AND Exists('$(MSBuildProgramFiles32)\..\Reference Assemblies\Microsoft\Framework\.NETFramework\v4.8')">
      $(TargetFrameworks);net48
    </TargetFrameworks>
    <TargetFrameworks Condition="'$(OS)' == 'Windows_NT' AND Exists('$(MSBuildProgramFiles32)\..\Reference Assemblies\Microsoft\Framework\.NETFramework\v4.6.2')">
      $(TargetFrameworks);net462
    </TargetFrameworks>
    <RuntimeIdentifiers>win-x86;win-x64;win-arm64;linux-x64;linux-arm64;osx-x64;osx-arm64</RuntimeIdentifiers>
    <BuildInParallel>true</BuildInParallel>
    <DebugSymbols>false</DebugSymbols>
    <DebugType>portable</DebugType>
    <Deterministic>true</Deterministic>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <Nullable>disable</Nullable>
    <Optimize>true</Optimize>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
    <RunCodeAnalysis>false</RunCodeAnalysis>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <UseRidGraph>true</UseRidGraph>
    <UseSharedCompilation>true</UseSharedCompilation>
    <WarningLevel>0</WarningLevel>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Common\Andastra.Tests.Common.csproj" />
    <ProjectReference Include="..\Performance\Andastra.Tests.Performance.csproj" />
  </ItemGroup>

  <!-- Copy xunit.runner.json from parent directory -->
  <ItemGroup>
    <None Include="..\xunit.runner.json" Link="xunit.runner.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Andastra\Parsing\Minimal\Andastra.Parsing.Minimal.csproj" />
    <ProjectReference Include="..\..\..\Andastra\Parsing\GFF.Only\Andastra.Parsing.GFF.Only.csproj" />
    <ProjectReference Include="..\..\..\Andastra\Parsing\TwoDA.Only\Andastra.Parsing.TwoDA.Only.csproj" />
    <ProjectReference Include="..\..\..\Andastra\Parsing\TLK.Only\Andastra.Parsing.TLK.Only.csproj" />
    <ProjectReference Include="..\..\..\Andastra\Parsing\ERF.Only\Andastra.Parsing.ERF.Only.csproj" />
    <ProjectReference Include="..\..\..\Andastra\Parsing\NSS.Only\Andastra.Parsing.NSS.Only.csproj" />
    <ProjectReference Include="..\..\..\Andastra\Parsing\LYT.Only\Andastra.Parsing.LYT.Only.csproj" />
    <ProjectReference Include="..\..\..\Andastra\Parsing\SSF.Only\Andastra.Parsing.SSF.Only.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FluentAssertions" Version="8.8.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.14.1" />
    <PackageReference Include="Xunit" Version="2.9.2" />
    <PackageReference Include="xunit.runner.console" Version="2.8.2">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="xunit.runner.visualstudio" Version="2.8.2">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <!-- Copy required DLLs to output directory for .NET 9 compatibility -->
  <!-- This is a workaround for .NET 9 test host not finding netstandard2.0/net6.0 assemblies -->
  <Target Name="CopyNetStandardDlls" AfterTargets="Build">
    <ItemGroup>
      <NetStandardDlls Include="$(NuGetPackageRoot)fluentassertions\8.8.0\lib\net6.0\FluentAssertions.dll" Condition="Exists('$(NuGetPackageRoot)fluentassertions\8.8.0\lib\net6.0\FluentAssertions.dll')" />
      <NetStandardDlls Include="$(NuGetPackageRoot)ini-parser-netstandard\2.5.3\lib\netstandard2.0\INIFileParser.dll" Condition="Exists('$(NuGetPackageRoot)ini-parser-netstandard\2.5.3\lib\netstandard2.0\INIFileParser.dll')" />
      <NetStandardDlls Include="$(NuGetPackageRoot)jetbrains.annotations\2025.2.4\lib\netstandard2.0\JetBrains.Annotations.dll" Condition="Exists('$(NuGetPackageRoot)jetbrains.annotations\2025.2.4\lib\netstandard2.0\JetBrains.Annotations.dll')" />
      <NetStandardDlls Include="$(NuGetPackageRoot)lzma-sdk\19.0.0\lib\netstandard2.0\SevenZip.dll" Condition="Exists('$(NuGetPackageRoot)lzma-sdk\19.0.0\lib\netstandard2.0\SevenZip.dll')" />
    </ItemGroup>
    <Copy SourceFiles="@(NetStandardDlls)" DestinationFolder="$(OutputPath)" SkipUnchangedFiles="true" ContinueOnError="true" />
  </Target>

  <!-- Copy test platform DLLs for .NET 9 compatibility -->
  <Target Name="CopyTestPlatformDlls" AfterTargets="Build">
    <ItemGroup>
      <TestPlatformDlls Include="$(NuGetPackageRoot)microsoft.testplatform*\**\Microsoft.TestPlatform.*.dll" />
      <TestPlatformDlls Include="$(NuGetPackageRoot)microsoft.testplatform*\**\Microsoft.VisualStudio.TestPlatform.*.dll" />
      <TestPlatformDlls Include="$(NuGetPackageRoot)nuget.frameworks\*\lib\*\NuGet.Frameworks.dll" />
    </ItemGroup>
    <Copy SourceFiles="@(TestPlatformDlls)" DestinationFolder="$(OutputPath)" SkipUnchangedFiles="true" ContinueOnError="true" />
  </Target>

  <!-- Ensure all runtime dependencies are copied -->
  <PropertyGroup>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>
</Project>
