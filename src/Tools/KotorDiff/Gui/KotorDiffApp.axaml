<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="KotorDiff.Gui.KotorDiffApp"
        Title="KotorDiff - Holocron Toolset"
        Width="900" Height="600"
        MinWidth="700" MinHeight="500">
  <Grid RowDefinitions="Auto,Auto,*,Auto,Auto" ColumnDefinitions="*" Margin="10">
    <!-- Paths Section -->
    <Border Grid.Row="0" BorderBrush="#FF6B4C" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,5">
      <StackPanel>
        <TextBlock Text="Paths" FontWeight="Bold" Foreground="#FF6B4C" Margin="0,0,0,10"/>
        
        <!-- Path 1 -->
        <TextBlock Text="Path 1 (Mine/Modified):" Foreground="#FF6B4C" Margin="0,0,0,5"/>
        <Grid ColumnDefinitions="Auto,Auto,*,Auto" Margin="0,0,0,10">
          <RadioButton x:Name="Path1RadioInstall" Content="Use Installation" Grid.Column="0" Margin="0,0,10,0" IsChecked="True"/>
          <RadioButton x:Name="Path1RadioCustom" Content="Custom Path" Grid.Column="1" Margin="0,0,10,0"/>
          <ComboBox x:Name="Path1ComboBox" Grid.Column="2" Margin="0,0,5,0"/>
          <Button x:Name="Path1BrowseButton" Content="Browse..." Grid.Column="3" Click="OnPath1BrowseClick"/>
        </Grid>
        
        <!-- Path 2 -->
        <TextBlock Text="Path 2 (Older/Vanilla):" Foreground="#FF6B4C" Margin="0,10,0,5"/>
        <Grid ColumnDefinitions="Auto,Auto,*,Auto">
          <RadioButton x:Name="Path2RadioInstall" Content="Use Installation" Grid.Column="0" Margin="0,0,10,0" IsChecked="True"/>
          <RadioButton x:Name="Path2RadioCustom" Content="Custom Path" Grid.Column="1" Margin="0,0,10,0"/>
          <ComboBox x:Name="Path2ComboBox" Grid.Column="2" Margin="0,0,5,0" IsEditable="True"/>
          <Button x:Name="Path2BrowseButton" Content="Browse..." Grid.Column="3" Click="OnPath2BrowseClick"/>
        </Grid>
      </StackPanel>
    </Border>
    
    <!-- Options Section -->
    <Border Grid.Row="1" BorderBrush="#FF6B4C" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,5">
      <StackPanel>
        <TextBlock Text="Options" FontWeight="Bold" Foreground="#FF6B4C" Margin="0,0,0,10"/>
        
        <CheckBox x:Name="CompareHashesCheckBox" Content="Compare hashes" IsChecked="True" Margin="0,0,0,10"/>
        
        <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,10">
          <TextBlock Text="Generate TSLPatchData:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
          <TextBox x:Name="TslPatchDataTextBox" Grid.Column="1" Margin="0,0,5,0" Text="Path to tslpatchdata folder"/>
          <Button x:Name="TslPatchDataBrowseButton" Content="Browse..." Grid.Column="2" Click="OnTslPatchDataBrowseClick"/>
        </Grid>
        
        <Grid ColumnDefinitions="Auto,*" Margin="0,0,0,10">
          <TextBlock Text="INI Filename:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
          <TextBox x:Name="IniFilenameTextBox" Grid.Column="1" Text="changes.ini"/>
        </Grid>
        
        <Grid ColumnDefinitions="Auto,*">
          <TextBlock Text="Log Level:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
          <ComboBox x:Name="LogLevelComboBox" Grid.Column="1" SelectedIndex="1">
            <ComboBoxItem Content="debug"/>
            <ComboBoxItem Content="info"/>
            <ComboBoxItem Content="warning"/>
            <ComboBoxItem Content="error"/>
            <ComboBoxItem Content="critical"/>
          </ComboBox>
        </Grid>
      </StackPanel>
    </Border>
    
    <!-- Output Section -->
    <Border Grid.Row="2" BorderBrush="#FF6B4C" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,5">
      <StackPanel>
        <TextBlock Text="Output" FontWeight="Bold" Foreground="#FF6B4C" Margin="0,0,0,10"/>
        <ScrollViewer>
          <TextBox x:Name="OutputTextBox" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" 
                   Background="#1E1E1E" Foreground="#FFFFFF" FontFamily="Consolas"/>
        </ScrollViewer>
      </StackPanel>
    </Border>
    
    <!-- Buttons -->
    <Grid Grid.Row="3" ColumnDefinitions="*,*,*" ColumnGap="5" Margin="0,0,0,10">
      <Button x:Name="RunDiffButton" Content="Run Diff" Grid.Column="0" Click="OnRunDiffClick"/>
      <Button x:Name="ClearButton" Content="Clear Output" Grid.Column="1" Click="OnClearClick"/>
      <Button x:Name="CloseButton" Content="Close" Grid.Column="2" Click="OnCloseClick"/>
    </Grid>
    
    <!-- Progress Bar -->
    <ProgressBar x:Name="ProgressBar" Grid.Row="4" IsIndeterminate="False" Minimum="0" Maximum="100" Value="0"/>
  </Grid>
</Window>

